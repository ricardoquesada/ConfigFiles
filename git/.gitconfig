[user]
	name = Ricardo Quesada
	email = ricardoquesada@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
    ui = true
[core]
	excludesfile = /Users/rquesada/.gitignore_global
[alias]
    co = checkout
    unstage = reset HEAD
    stat = status
    b = !git branch -vv
    ba = !git branch -avv
    hist = !git --no-pager log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short -20
    history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    tp = !git push -nv && git pull -nv
    pull-all = pull --all -v
    push-all = push --all -v
[push]
    default = current 
[pull]
    default = current
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[difftool "sourcetree"]
	cmd = /Applications/Kaleidoscope.app/Contents/MacOS/ksdiff -w \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
